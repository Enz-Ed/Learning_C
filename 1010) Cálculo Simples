#include <stdio.h>
 
int main() {
    int product1, amountproduct1; float priceproduct1;
    scanf("%d", &product1); 
    scanf("%d", &amountproduct1); 
    scanf("%f", &priceproduct1);
    
    int product2, amountproduct2; float priceproduct2;
    scanf("%d", &product2); 
    scanf("%d", &amountproduct2); 
    scanf("%f", &priceproduct2);
    
    float VALORAPAGAR;
    VALORAPAGAR = (amountproduct1 * priceproduct1 + amountproduct2 * priceproduct2);
    printf("VALOR A PAGAR: R$ %.2f\n", VALORAPAGAR);
    
    return 0;
}
